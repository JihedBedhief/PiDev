{% extends 'base.html.twig' %}

{% block title %}Client
{% endblock %}

{% block body %}
	<div style="margin-left:320px ; width:78% ; margin-top:100px">

		<table class="table">
			<tbody>
				<tr>
					<th>Name</th>
					<td>{{ client.name }}</td>
				</tr>
				<tr>
					<th>Telephone</th>
					<td>{{ client.telephone }}</td>
				</tr>
				<tr>
					<th>Email</th>
					<td>{{ client.email }}</td>
				</tr>
				<tr>
					<th>Ville</th>
					<td>{{ client.ville }}</td>
				</tr>
				<tr>
					<th>Code_postal</th>
					<td>{{ client.codePostal }}</td>
				</tr>
				<tr>
					<th>Cin</th>
					<td>{{ client.cin }}</td>
				</tr>
			</tbody>
		</table>
	</div>
	<center>
		<a class="btn btn-success" href="{{ path('app_client_index') }}" style="margin-left:180px">back to list</a>
		<a class="btn btn-success" href="{{ path('app_client_edit', {'id': client.id}) }}" style="margin-left:130px">edit</a>
		{{include('client/_delete_form.html.twig')}}
	</center>
{% endblock %}
