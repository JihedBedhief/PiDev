{% block body %}
	<div class="row" style="margin-left:300px">
		<div style="display: flex;align-items: center;justify-content: center;margin-top: 150px; padding: 10px;">

			<div class="card">
				<div class="card-body">
					<h5 class="card-title">Update Division</h5>

					<!-- General Form Elements -->
					<!-- General Form Elements -->
					{{ form_start(f,{attr:{novalidate:'novalidate'}}) }}

					<label for="inputText" class="col-sm-18 col-form-label">name</label>
					<div class="col-sm-18">
						{{ form_widget(f.name,{'attr':{'class':'form-control'}}) }}

					</div>
					{{ form_errors(f.name,{'attr':{'class':'text-danger'}}) }}


					<label for="inputText" class="col-sm-18 col-form-label">telephone</label>
					<div class="col-sm-18">
						{{ form_widget(f.telephone,{'attr':{'class':'form-control'}}) }}

					</div>
					{{ form_errors(f.telephone,{'attr':{'class':'text-danger'}}) }}

					<label for="inputText" class="col-sm-18 col-form-label">email</label>
					<div class="col-sm-18">
						{{ form_widget(f.email,{'attr':{'class':'form-control'}}) }}
					</div>
					{{ form_errors(f.email,{'attr':{'class':'text-danger'}}) }}

					<br/>
					<label for="inputText" class="col-sm-18 col-form-label">ville</label>
					<div class="col-sm-18">
						{{ form_widget(f.ville,{'attr':{'class':'form-control'}}) }}
					</div>
					{{ form_errors(f.ville,{'attr':{'class':'text-danger'}}) }}

					<br/>
					<label for="inputText" class="col-sm-18 col-form-label">code_postal</label>
					<div class="col-sm-18">
						{{ form_widget(f.code_postal,{'attr':{'class':'form-control'}}) }}
					</div>
					{{ form_errors(f.code_postal,{'attr':{'class':'text-danger'}}) }}

					<br/>
					<label for="inputText" class="col-sm-18 col-form-label">cin</label>
					<div class="col-sm-18">
						{{ form_widget(f.cin,{'attr':{'class':'form-control'}}) }}
					</div>
					{{ form_errors(f.cin,{'attr':{'class':'text-danger'}}) }}

					<br/>
					<label for="inputText" class="col-sm-18 col-form-label">division</label>
					<div class="col-sm-18">
						{{ form_widget(f.division,{'attr':{'class':'form-control'}}) }}
					</div>
					{{ form_errors(f.division,{'attr':{'class':'text-danger'}}) }}

					<label for="inputText" class="col-sm-18 col-form-label">Date d'ajout</label>
					<div class="col-sm-18">
						{{ form_widget(f.DateAjout,{'attr':{'class':'form-control'}}) }}
					</div>
					{{ form_errors(f.DateAjout,{'attr':{'class':'text-danger'}}) }}

					<br/>
					<div class="col-sm-10" style="display: flex;align-items: center;justify-content: center">

						{{ form_widget(f.ajouter,{'attr':{'class':'btn btn-primary'}}) }}
					</div>

					<div style="display:none">
						<div class="col-12">
							<label for="youraddr" class="form-label">statuts</label>
							{{ form_widget(f.status,{'attr':{'class':'form-control'}}) }}
							<div class="invalid-feedback">statuts</div>
							{{ form_errors(f.status,{'attr':{'class':'text-danger'}}) }}
							<div class="col-sm-18">
								{{ form_widget(f.User,{'value' : '{{app.user.id}}'}) }}
							</div>
						</div>
					</div>
					{{ form_end(f) }}

				</div>
			</div>

		</div>

	</div>


{% endblock %}
