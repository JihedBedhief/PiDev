{% block body %}

<style>
  .table {
    width: 80%;
    margin: auto;
    margin-top: 50px;
  }

  .table td, .table th {
    padding: 20px;
    border: 1px solid black;
  }

  .table th {
    background-color: #fcfcfc;
    color: #050505;
    font-weight: bold;
    text-transform: uppercase;
    font-size: 0.9rem;
    vertical-align: middle;
  }

  .table td {
    vertical-align: middle;
    font-size: 0.85rem;
  }

  .table img {
    max-height: 100px;
    max-width: 100px;
  }

  .table td:nth-child(odd) {
    font-weight: bold;
    text-transform: capitalize;
  }
</style>

<div class="container">
  <h1 class="text-center my-5"> Detaille produit : {{ product.nameProduct }}</h1>
  <table class="table table-bordered table-hover">
    <tbody>
      <tr>
        <th scope="row">Id</th>
        <td>{{ product.id }}</td>
      </tr>
      <tr>
        <th scope="row">Name Product</th>
        <td>{{ product.nameProduct }}</td>
      </tr>
      <tr>
        <th scope="row">quantity</th>
        <td>{{ product.quantite }}</td>
      </tr>
      <tr>
        <th scope="row">taxe</th>
        <td>{{ product.taxe }}</td>
      </tr>
      
      <tr>
        <th scope="row">Price</th>
        <td>{{ product.prix }}</td>
      </tr>
      <tr>
        <th scope="row">Image</th>
        <td><div class="border-top-0">
            <div>
                <img src="/uploads/{{ product.image }}" alt="" class="img-4by3-lg rounded" width="100%" height="100%" />                
            </div>
          </div>
        </td>
      </tr>

    </tbody>
  </table>
</div>

{% endblock %}
