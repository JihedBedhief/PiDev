


{% extends 'base.html.twig' %}

{% block title %} New Product {% endblock %}
{% block body %}
	<div class="row" style="margin-left:300px">
		<div style="display: flex;align-items: center;justify-content: center;margin-top: 90px; padding: 15px;">

			<div class="card">
				<div class="card-body">
					<h5 class="card-title">Add Product</h5>

					<!-- General Form Elements -->
					{{ form_start(form,{attr:{novalidate:'novalidate'}}) }}

					<label for="inputText" class="col-sm-18 col-form-label">Product name</label>
					<div class="col-sm-18">
						{{ form_widget(form.name_product,{'attr':{'class':'form-control'}}) }}

					</div>
					{{ form_errors(form.name_product,{'attr':{'class':'text-danger'}}) }}


                    <label for="inputText" class="col-sm-18 col-form-label">Prix (en D.T) </label>
					<div class="col-sm-18">
						{{ form_widget(form.prix,{'attr':{'class':'form-control'}}) }}

					</div>
					{{ form_errors(form.prix,{'attr':{'class':'text-danger'}}) }}

					<label for="inputText" class="col-sm-18 col-form-label">Quantity</label>
					<div class="col-sm-18">
						{{ form_widget(form.quantite,{'attr':{'class':'form-control'}}) }}

					</div>
					<div style="display:none">
					<label for="inputText" class="col-sm-18 col-form-label">image</label>
					<div class="col-sm-18">
						{{ form_widget(form.image,{'attr':{'class':'form-control'}}) }}

					</div>
					</div>
					{{ form_errors(form.quantite,{'attr':{'class':'text-danger'}}) }}
					<label for="inputText" class="col-sm-18 col-form-label">Category name</label>
					<div class="col-sm-18">
						{{ form_widget(form.category,{'attr':{'class':'form-control'}}) }}

					</div>
					{{ form_errors(form.category,{'attr':{'class':'text-danger'}}) }}
					<br/>
					<div class="col-sm-10" style="display: flex;align-items: center;justify-content: center">

						{{ form_widget(form.ADD,{'attr':{'class':'btn btn-primary'}}) }}
					</div>

					{{ form_end(form) }}

				</div>
			</div>

		</div>

	</div>


{% endblock %}