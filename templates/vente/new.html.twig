{% extends 'base.html.twig' %}

{% block title %}New Vente{% endblock %}


{% block body %}
	<div class="row" style="margin-left:300px">
		<div style="display: flex;align-items: center;justify-content: center;margin-top: 90px; padding: 15px;">

            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Add vente</h5>
                    <div style="width :120%">
                    <!-- General Form Elements -->
                    {{ form_start(f,{attr:{novalidate:'novalidate'}}) }}
                        <label for="inputText" class="col-sm-4 col-form-label">Produit</label>
                        <div class="col-sm-10">
                            {{ form_widget(f.produit,{'attr':{'class':'form-control'}}) }}

                        </div>
                    {{ form_errors(f.produit,{'attr':{'class':'text-danger'}}) }}

                    <label for="inputText" class="col-sm-4 col-form-label">Quantité</label>
                    <div class="col-sm-10">
                        {{ form_widget(f.quantite,{'attr':{'class':'form-control'}}) }}

                    </div>
                {{ form_errors(f.quantite,{'attr':{'class':'text-danger'}}) }}

                <label for="inputText" class="col-sm-4 col-form-label">Prix de l'unité</label>
                <div class="col-sm-10">
                    {{ form_widget(f.prix_unite,{'attr':{'class':'form-control'}}) }}

                </div>
            {{ form_errors(f.prix_unite,{'attr':{'class':'text-danger'}}) }}

            <label for="inputText" class="col-sm-4 col-form-label">Taxe</label>
            <div class="col-sm-10">
                {{ form_widget(f.taxe,{'attr':{'class':'form-control'}}) }}

            </div>
        {{ form_errors(f.taxe,{'attr':{'class':'text-danger'}}) }}

                    
               
                    <label for="inputText" class="col-sm-4 col-form-label">Date de vente</label>
                        <div class="col-sm-10">
                            {{ form_widget(f.date_vente,{'attr':{'class':'form-control'}}) }}
                        </div>
                    {{ form_errors(f.date_vente,{'attr':{'class':'text-danger'}}) }}
                    <label for="inputText" class="col-sm-4 col-form-label">Client</label>
                        <div class="col-sm-10">
                            {{ form_widget(f.client,{'attr':{'class':'form-control'}}) }}
                        </div>
                    {{ form_errors(f.client,{'attr':{'class':'text-danger'}}) }}

                    <label for="inputText" class="col-sm-4 col-form-label">Point de Vente</label>
                        <div class="col-sm-10">
                            {{ form_widget(f.PointVente,{'attr':{'class':'form-control'}}) }}
                        </div>
                    {{ form_errors(f.PointVente,{'attr':{'class':'text-danger'}}) }}
                    <br/>
                    <div style="width:200px">

                        {{ form_widget(f.captcha)}} 
                        </div>
                     
                    <div class="col-sm-10" style="display: flex;align-items: center;justify-content: center">

                        {{ form_widget(f.ajouter,{'attr':{'class':'btn btn-primary'}}) }}
                    </div>

                    {{ form_end(f) }}

                </div>
            </div>

        </div>

    </div>


{% endblock %}