{% extends 'base.html.twig' %}

{% block body %}
    <div class="row" style="margin-top:100px;">
        <div class="col-md-6 offset-md-3 mt-5">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Update Employer</h5>

                    {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}

                    <div class="form-group">
                        {{ form_label(form.name, 'Employer Name', {'label_attr': {'class': 'col-sm-4 col-form-label'}}) }}
                        <div class="col-sm-8">
                            {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>

                    <div class="form-group">
                        {{ form_label(form.email, 'Email', {'label_attr': {'class': 'col-sm-4 col-form-label'}}) }}
                        <div class="col-sm-8">
                            {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>

                    <div class="form-group">
                        {{ form_label(form.phone_number, 'Phone Number', {'label_attr': {'class': 'col-sm-4 col-form-label'}}) }}
                        <div class="col-sm-8">
                            {{ form_widget(form.phone_number, {'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>

                    <div class="form-group">
                        {{ form_label(form.id_company, 'ID Company', {'label_attr': {'class': 'col-sm-4 col-form-label'}}) }}
                        <div class="col-sm-8">
                            {{ form_widget(form.id_company, {'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>

                    <div class="form-group">
                        {{ form_label(form.fonction, 'Function', {'label_attr': {'class': 'col-sm-4 col-form-label'}}) }}
                        <div class="col-sm-8">
                            {{ form_widget(form.fonction, {'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>

                    <div class="form-group">
                        {{ form_label(form.departement, 'Department', {'label_attr': {'class': 'col-sm-4 col-form-label'}}) }}
                        <div class="col-sm-8">
                            {{ form_widget(form.departement, {'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>

                    <div class="form-group" style="margin-top: 4%;">
                        <div class="col-sm-8 offset-sm-4">
                            {{ form_widget(form.Create, {'attr': {'class': 'btn btn-primary'}}) }}
                        </div>
                    </div>

                    {{ form_end(form) }}

                </div>
            </div>
        </div>
    </div>

    <div class="mt-3">
        <a href="{{ path('app_rh_index') }}" class="btn btn-secondary">Back to list</a>
        {{ include('rh/_delete_form.html.twig') }}
    </div>
{% endblock %}