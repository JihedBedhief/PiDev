{% extends 'base.html.twig' %}

{% block title %}New Purchase
{% endblock %}

{% block body %}
	<div class="row" style="margin-left:300px">
		<div style="display: flex;align-items: center;justify-content: center;margin-top: 90px; padding: 15px;">

			<div class="card">
				<div class="card-body">
					<h5 class="card-title">Add Achat</h5>

					<!-- General Form Elements -->
					{{ form_start(f,{attr:{novalidate:'novalidate'}}) }}

					<label for="inputText" class="col-sm-18 col-form-label">Product</label>
					<div class="col-sm-18">
						{{ form_widget(f.product,{'attr':{'class':'form-control'}}) }}

					</div>
					{{ form_errors(f.product,{'attr':{'class':'text-danger'}}) }}


					<label for="inputText" class="col-sm-18 col-form-label">Quantity</label>
					<div class="col-sm-18">
						{{ form_widget(f.qte,{'attr':{'class':'form-control'}}) }}

					</div>
					{{ form_errors(f.qte,{'attr':{'class':'text-danger'}}) }}

					<label for="inputText" class="col-sm-18 col-form-label">Unit price</label>
					<div class="col-sm-18">
						{{ form_widget(f.unitPrice,{'attr':{'class':'form-control'}}) }}
					</div>
					{{ form_errors(f.unitPrice,{'attr':{'class':'text-danger'}}) }}

					<br/>
					<label for="inputText" class="col-sm-18 col-form-label">Purchase date</label>
					<div class="col-sm-18">
						{{ form_widget(f.puchaseDate,{'attr':{'class':'form-control'}}) }}
					</div>
					{{ form_errors(f.puchaseDate,{'attr':{'class':'text-danger'}}) }}

					<br/>
					<label for="inputText" class="col-sm-18 col-form-label">Taxe rate</label>
					<div class="col-sm-18">
						{{ form_widget(f.taxeRate,{'attr':{'class':'form-control'}}) }}
					</div>
					{{ form_errors(f.taxeRate,{'attr':{'class':'text-danger'}}) }}

					<label for="inputText" class="col-sm-18 col-form-label">Supplier</label>
					<div class="col-sm-18">
						{{ form_widget(f.supplier,{'attr':{'class':'form-control'}}) }}
					</div>
					{{ form_errors(f.supplier,{'attr':{'class':'text-danger'}}) }}

					<br/>
					<div class="col-sm-10" style="display: flex;align-items: center;justify-content: center">

						{{ form_widget(f.add,{'attr':{'class':'btn btn-primary'}}) }}
					</div>
					<div style="display:none">
						<div class="col-sm-18">
							{{ form_widget(f.User,{'value' : '{{app.user.id}}'}) }}
						</div>
					</div>
					{{ form_end(f) }}

				</div>
			</div>

		</div>

	</div>


{% endblock %}
