{% extends 'base.html.twig' %}

{% block body %}
	<div class="row" style="margin-top:100px;">
		<div class="col-md-6 offset-md-3 mt-5">
			<div class="card">
				<div class="card-body">
					<h5 class="card-title">Purchase
					</h5>

					{{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}

					<div class="form-group">
						{{ form_label(form.product, 'Employer Name', {'label_attr': {'class': 'col-sm-4 col-form-label'}}) }}
						<div class="col-sm-8">
							{{ form_widget(form.product, {'attr': {'class': 'form-control'}}) }}
						</div>
					</div>

					<div class="form-group">
						{{ form_label(form.qte, 'Email', {'label_attr': {'class': 'col-sm-4 col-form-label'}}) }}
						<div class="col-sm-8">
							{{ form_widget(form.qte, {'attr': {'class': 'form-control'}}) }}
						</div>
					</div>

					<div class="form-group">
						{{ form_label(form.unitPrice, 'Phone Number', {'label_attr': {'class': 'col-sm-4 col-form-label'}}) }}
						<div class="col-sm-8">
							{{ form_widget(form.unitPrice, {'attr': {'class': 'form-control'}}) }}
						</div>
					</div>

					<div class="form-group">
						{{ form_label(form.puchaseDate, 'ID Company', {'label_attr': {'class': 'col-sm-4 col-form-label'}}) }}
						<div class="col-sm-8">
							{{ form_widget(form.puchaseDate, {'attr': {'class': 'form-control'}}) }}
						</div>
					</div>

					<div class="form-group">
						{{ form_label(form.taxeRate, 'Function', {'label_attr': {'class': 'col-sm-4 col-form-label'}}) }}
						<div class="col-sm-8">
							{{ form_widget(form.taxeRate, {'attr': {'class': 'form-control'}}) }}
						</div>
					</div>
					<div class="form-group">
						{{ form_label(form.supplier, 'Function', {'label_attr': {'class': 'col-sm-4 col-form-label'}}) }}
						<div class="col-sm-8">
							{{ form_widget(form.supplier, {'attr': {'class': 'form-control'}}) }}
						</div>
					</div>


					<div class="form-group" style="margin-top: 4%;">
						<div class="col-sm-8 offset-sm-4">
							{{ form_widget(form.add, {'attr': {'class': 'btn btn-primary'}}) }}
						</div>
					</div>
					<div style="display:none">
						<div class="col-sm-18">
							{{ form_widget(f.User,{'value' : '{{app.user.id}}'}) }}
						</div>
					</div>
					{{ form_end(form) }}

				</div>
			</div>
		</div>
	</div>

	<div class="mt-3">
		<a href="{{ path('app_purchase_index') }}" class="btn btn-secondary">Back to list</a>
		{{ include('purchase/_delete_form.html.twig') }}
	</div>
{% endblock %}
