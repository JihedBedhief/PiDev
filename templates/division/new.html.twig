{% extends 'base.html.twig' %}

{% block title %} New Division {% endblock %}
{% block body %}
		<div class="row" style="margin-left:300px">
		<div style="display: flex;align-items: center;justify-content: center;margin-top: 90px; padding: 15px;">

			<div class="card">
				<div class="card-body">
					<h5 class="card-title">Add Division</h5>

					<!-- General Form Elements -->
					{{ form_start(f,{attr:{novalidate:'novalidate'}}) }}

					<label for="inputText" class="col-sm-18 col-form-label">type</label>
					<div class="col-sm-18">
						{{ form_widget(f.type,{'attr':{'class':'form-control'}}) }}

					</div>
					{{ form_errors(f.type,{'attr':{'class':'text-danger'}}) }}


					<label for="inputText" class="col-sm-18 col-form-label">taux_remise</label>
					<div class="col-sm-18">
						{{ form_widget(f.taux_remise,{'attr':{'class':'form-control'}}) }}

					</div>
					{{ form_errors(f.taux_remise,{'attr':{'class':'text-danger'}}) }}
					<br/>
					<div class="col-sm-10" style="display: flex;align-items: center;justify-content: center">

						{{ form_widget(f.ajouter,{'attr':{'class':'btn btn-primary'}}) }}
					</div>

					{{ form_end(f) }}

				</div>
			</div>

		</div>

	</div>


{% endblock %}

