{% extends 'base.html.twig' %}

{% block title %}Division index
{% endblock %}

{% block body %}

	<div class="row" style="display: flex;align-items: center;justify-content: center;margin-top:150px;margin-left:150px;margin-rigth:1px;">

		<div class="col-lg-10" style="margin-left:180px; margin-rigth:1px;">

			<div class="card">
				<div class="card-body">
					<h5 class="card-title">Liste des divisions</h5>
					<a href="{{ path('app_division_new') }}">
						<i class="ri-add-circle-fill" style="font-size: 50px;"></i>
					</a>
					<input type="search" id="myInput" class="form-control pl-6" placeholder="Search division"/>
					<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.3/jquery.min.js"></script>
					<script>
						$(document).ready(function () {
$("#myInput").on("keyup", function () {
var value = $(this).val().toLowerCase();
$("#myTable tr").filter(function () {
$(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
});
})
});
					</script>
					<!-- Table with stripped rows -->
					<table class="table table-striped" id="myTable">
						<thead>
							<tr>
								<th>type</th>
								<th>taux_remise</th>
							</tr>
						</thead>
						<tbody>
							{% for division in divisions %}
								<tr>
									<td>{{ division.type }}</td>
									<td>{{ division.tauxRemise }}</td>
									<td>
										<a class="btn btn-success" href="{{ path('app_division_edit',{'id':division.id}) }}">edit</a>
									</td>
									<td>
										<a class="btn btn-success" href="{{ path('app_division_show',{'id':division.id}) }}">show</a>
									</td>
								</tr>

							{% endfor %}

						</tbody>
					</table>
					<!-- End small tables -->

				</div>
			</div>

		</div>
	{% endblock %}
