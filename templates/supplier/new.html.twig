{% extends 'base.html.twig' %}

{% block title %}New Purchase{% endblock %}

{% block body %}
	<div class="row" style="margin-left:300px">
		<div style="display: flex;align-items: center;justify-content: center;margin-top: 90px; padding: 15px;">

			<div class="card">
				<div class="card-body">
					<h5 class="card-title">Add Supplier</h5>

					<!-- General Form Elements -->
					{{ form_start(f,{attr:{novalidate:'novalidate'}}) }}

					<label for="inputText" class="col-sm-18 col-form-label">Name</label>
					<div class="col-sm-18">
						{{ form_widget(f.name,{'attr':{'class':'form-control'}}) }}

					</div>
					{{ form_errors(f.name,{'attr':{'class':'text-danger'}}) }}


					<label for="inputText" class="col-sm-18 col-form-label">Type</label>
					<div class="col-sm-18">
						{{ form_widget(f.type,{'attr':{'class':'form-control'}}) }}

					</div>
					{{ form_errors(f.type,{'attr':{'class':'text-danger'}}) }}

					<label for="inputText" class="col-sm-18 col-form-label">Address</label>
					<div class="col-sm-18">
						{{ form_widget(f.address,{'attr':{'class':'form-control'}}) }}
					</div>
					{{ form_errors(f.address,{'attr':{'class':'text-danger'}}) }}

					<br/>
					<label for="inputText" class="col-sm-18 col-form-label"> Phone Number</label>
					<div class="col-sm-18">
						{{ form_widget(f.phoneNumber,{'attr':{'class':'form-control'}}) }}
					</div>
					{{ form_errors(f.phoneNumber,{'attr':{'class':'text-danger'}}) }}

					<br/>
					 <label for="inputText" class="col-sm-18 col-form-label">Email</label>
					<div class="col-sm-18">
						{{ form_widget(f.email,{'attr':{'class':'form-control'}}) }}
					</div>
					{{ form_errors(f.email,{'attr':{'class':'text-danger'}}) }} 

              

					<br/>
					<div class="col-sm-10" style="display: flex;align-items: center;justify-content: center">

						{{ form_widget(f.add,{'attr':{'class':'btn btn-primary'}}) }}
					</div>

					{{ form_end(f) }}

				</div>
			</div>

		</div>

	</div>


{% endblock %}
