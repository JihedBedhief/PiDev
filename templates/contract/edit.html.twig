{% extends 'base.html.twig' %}

{% block body %}
    <div class="row">
        <div  style="display: flex;align-items: center;justify-content: center;margin-top: 150px; padding: 10px;">

            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Update Contract</h5>

                    <!-- General Form Elements -->
                    {{ form_start(form) }}
                    <label for="inputText" class="col-sm-4 col-form-label"> employer</label>
                    <div class="col-sm-10">
                        {{ form_widget(form.employer,{'attr':{'class':'form-control'}}) }}
                    </div>
                    <label for="inputText" class="col-sm-4 col-form-label"> Type</label>
                    <div class="col-sm-10">
                        {{ form_widget(form.type,{'attr':{'class':'form-control'}}) }}
                    </div>


                    <label for="inputText" class="col-sm-4 col-form-label">Duration</label>
                    <div class="col-sm-10">
                        {{ form_widget(form.duration,{'attr':{'class':'form-control'}}) }}

                    </div>
                    <label for="inputText" class="col-sm-4 col-form-label">Salary</label>
                    <div class="col-sm-10">
                        {{ form_widget(form.salary,{'attr':{'class':'form-control'}}) }}

                    </div>
                    

                    <br/>
                    <div class="col-sm-10" style="display: flex;align-items: center;justify-content: center">

                        {{ form_widget(form.Create,{'attr':{'class':'btn btn-primary'}}) }}
                    </div>

                    {{ form_end(form) }}

                </div>
            </div>

        </div>

    </div>

     <a href="{{ path('app_contract_index') }}">back to list</a>

    {{ include('contract/_delete_form.html.twig') }}
{% endblock %}
