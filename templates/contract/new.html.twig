{% extends 'base.html.twig' %}

{% block title %} New Contract {% endblock %}
{% block body %}
	<div class="row" style="margin-left:300px">
		<div style="display: flex;align-items: center;justify-content: center;margin-top: 90px; padding: 15px;">

			<div class="card">
				<div class="card-body">
					<h5 class="card-title">Create new  Contract</h5>

					<!-- General Form Elements -->
					{{ form_start(form,{attr:{novalidate:'novalidate'}}) }}
                 
                    
					<label for="inputText" class="col-sm-18 col-form-label">Employer name</label>
					<div class="col-sm-18">
						{{ form_widget(form.employer,{'attr':{'class':'form-control'}}) }}

					</div>
					
					{{ form_errors(form.employer,{'attr':{'class':'text-danger'}}) }}


					<label for="inputText" class="col-sm-18 col-form-label"> Type</label>
					<div class="col-sm-18">
						{{ form_widget(form.type,{'attr':{'class':'form-control'}}) }}

					</div>
					{{ form_errors(form.type,{'attr':{'class':'text-danger'}}) }}


					<label for="inputText" class="col-sm-18 col-form-label">Duration</label>
					<div class="col-sm-18">
						{{ form_widget(form.duration,{'attr':{'class':'form-control'}}) }}

					</div>
					{{ form_errors(form.duration,{'attr':{'class':'text-danger'}}) }}
					<br/>
                    <label for="inputText" class="col-sm-18 col-form-label">Salary</label>
					<div class="col-sm-18">
						{{ form_widget(form.salary,{'attr':{'class':'form-control'}}) }}

					</div>
					{{ form_errors(form.salary,{'attr':{'class':'text-danger'}}) }}
					<br/>
					<div class="col-sm-10" style="display: flex;align-items: center;justify-content: center">

						{{ form_widget(form.Create,{'attr':{'class':'btn btn-primary'}}) }}
					</div>

					{{ form_end(form) }}

				</div>
			</div>

		</div>

	</div>


{% endblock %}