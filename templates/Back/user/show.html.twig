{% extends 'base2.html.twig' %}

{% block title %}User{% endblock %}

{% block bodyBack %}
    <h1>User</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ user.nom }}</td>
            </tr>
            <tr>
                <th>Prenom</th>
                <td>{{ user.prenom }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ user.date ? user.date|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Sexe</th>
                <td>{{ user.sexe }}</td>
            </tr>
            <tr>
                <th>Numero_tele</th>
                <td>{{ user.numeroTele }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>address</th>
                <td>{{ user.address }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ user.password}}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ user.image}}</td>
                <img width="79" src="/upload/img/{{ user.image }}" class="img-thumbnail">
            </tr>
        </tbody>
    </table>

    <a href="{{ path('user_index') }}">back to list</a>

    <a href="{{ path('user_edit', {'id': user.id}) }}">edit</a>

    {{ include('Back/user/_delete_form.html.twig') }}
{% endblock %}
