{% block body %}
<style>
    /* Define some base styles */

body {
  font-family: sans-serif;
}

.container {
  max-width: 800px;
  margin: 0 auto;
  padding: 20px;
}

table {
  width: 100%;
  border-collapse: collapse;
}

th, td {
  padding: 10px;
  text-align: left;
  border-bottom: 1px solid #ddd;
}

th {
  font-weight: bold;
}

.card-title {
  font-size: 24px;
  font-weight: bold;
  margin-bottom: 20px;
  background-color: #f5f5f5;
  padding: 10px;
  border-radius: 5px;
}

/* Customize some styles for this specific layout */

.container {
  background-color: #fff;
  border: 1px solid #ccc;
  border-radius: 5px;
  box-shadow: 2px 2px 5px rgba(0, 0, 0, 0.1);
}

table {
  margin-bottom: 40px;
  border-spacing: 0 10px;
}

th:first-child {
  width: 200px;
}

td:first-child {
  text-transform: capitalize;
}

td:last-child {
  font-weight: bold;
}

.card-title {
  text-align: center;
  margin-top: 40px;
}

.container {
  margin-bottom: 40px;
}
</style>
 
<div class="container">
<img src="{{asset('assets/img/rh.jpg')}}" alt="rhh">

  <div class="row">
    <div class="col-md-8 mx-auto">


      <div class="card-body">
        <h5 class="card-title">Contract Details</h5>

        <table class="table table-bordered">
          <tbody>
            <tr>
              <th>Nom</th>
              <td>{{ contract.emp.nom }}</td>
            </tr>
            <tr>
              <th>Type</th>
              <td>{{ contract.type }}</td>
            </tr>
            <tr>
              <th>Salaire</th>
              <td>{{ contract.salaire }}</td>
            </tr>
            <tr>
              <th>Date debut</th>
              <td>{{ contract.datedebut ? contract.datedebut|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
              <th>Date fin</th>
              <td>{{ contract.datefin ? contract.datefin|date('Y-m-d') : '' }}</td>
            </tr>
          </tbody>
        </table>

      </div>
    </div>
  </div>
</div>

{% endblock %}
