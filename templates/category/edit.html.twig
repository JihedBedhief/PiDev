
{% extends 'base.html.twig' %}

{% block body %}
    <div class="row">
        <div  style="display: flex;align-items: center;justify-content: center;margin-top: 150px; padding: 10px;">

            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Update Category</h5>

                    <!-- General Form Elements -->
                    {{ form_start(form) }}
                    <label for="inputText" class="col-sm-4 col-form-label">name category</label>
                    <div class="col-sm-10">
                        {{ form_widget(form.name,{'attr':{'class':'form-control'}}) }}
                    </div>


                    <label for="inputText" class="col-sm-4 col-form-label">desc</label>
                    <div class="col-sm-10">
                        {{ form_widget(form.description,{'attr':{'class':'form-control'}}) }}

                    </div>
                    

                    <br/>
                    <div class="col-sm-10" style="display: flex;align-items: center;justify-content: center">

                        {{ form_widget(form.ADD,{'attr':{'class':'btn btn-primary'}}) }}
                    </div>

                    {{ form_end(form) }}

                </div>
            </div>

        </div>

    </div>


{% endblock %}