{% extends 'base.html.twig' %}

{% block title %}Edit PointVente
{% endblock %}

{% block body %}
	<div class="row" style="margin-left:300px;" %>
		<div style="display: flex;align-items: center;justify-content: center;margin-top: 150px; padding: 10px;">

			<div class="card">
				<div class="card-body">
					<h5 class="card-title">Update Point de vente
					</h5>

					<!-- General Form Elements -->
					{{ form_start(f,{attr:{novalidate:'novalidate'}}) }}
					<label for="inputText" class="col-sm-4 col-form-label">name</label>
					<div class="col-sm-10">
						{{ form_widget(f.name,{'attr':{'class':'form-control'}}) }}
					</div>
                         {{ form_errors(f.name,{'attr':{'class':'text-danger'}}) }}

					<label for="inputText" class="col-sm-4 col-form-label">region</label>
					<div class="col-sm-10">
						{{ form_widget(f.region,{'attr':{'class':'form-control'}}) }}
                         </div>
                         {{ form_errors(f.region,{'attr':{'class':'text-danger'}}) }}
						
                        <label for="inputText" class="col-sm-4 col-form-label">ville</label>
						<div class="col-sm-10">
							{{ form_widget(f.ville,{'attr':{'class':'form-control'}}) }}
						</div>
                         {{ form_errors(f.ville,{'attr':{'class':'text-danger'}}) }}

						<label for="inputText" class="col-sm-4 col-form-label">code_postal</label>
						<div class="col-sm-10">
							{{ form_widget(f.code_postal,{'attr':{'class':'form-control'}}) }}
							</div>
                            {{ form_errors(f.code_postal,{'attr':{'class':'text-danger'}}) }}

                            <label for="inputText" class="col-sm-4 col-form-label">telephone</label>
							<div class="col-sm-10">
								{{ form_widget(f.telephone,{'attr':{'class':'form-control'}}) }}
							</div>
                            {{ form_errors(f.telephone,{'attr':{'class':'text-danger'}}) }}

                            <label for="inputText" class="col-sm-4 col-form-label">mail du point de vente</label>
						<div class="col-sm-10">
							{{ form_widget(f.email,{'attr':{'class':'form-control'}}) }}
						</div>
                        {{ form_errors(f.email,{'attr':{'class':'text-danger'}}) }}

							<br/>
							<div class="col-sm-10" style="display: flex;align-items: center;justify-content: center">

								{{ form_widget(f.ajouter,{'attr':{'class':'btn btn-primary'}}) }}
							</div>

							{{ form_end(f) }}

						</div>
					</div>

				</div>

			</div>


		{% endblock %}
