{% extends 'base1.html.twig' %}

{% block body %}
<div >
    <div class="row">
        <div class="col-md-6 offset-md-3">
            {{ form_start(form) }}
            {{ form_row(form) }}
            {{ form_end(form) }}
        </div>
    </div>
</div>
  <div class="container">
    <h1 >List of Purchases</h1>
    <table  class="table table-striped">
      <thead>
        <tr>
        <th>Product</th>
        <th>Qte</th>
        <th>UnitPrice</th>
        <th>PuchaseDate</th>
        <th>TaxeRate</th>
        </tr>
      </thead>
      <tbody>
        {% for purchase in employees %}
          <td>{{ purchase.product }}</td>
          <td>{{ purchase.qte }}</td>
          <td>{{ purchase.unitPrice }}</td>
          <td>{{ purchase.puchaseDate ? purchase.puchaseDate|date('Y-m-d') : '' }}</td>
          <td>{{ purchase.taxeRate }}</td>
          </tr>
        {% endfor %}
      </tbody>
    </table>
  </div>
{% endblock %}