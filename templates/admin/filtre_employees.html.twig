{% extends 'base1.html.twig' %}

{% block body %}

  <div class="container">
    <h1 >List of Employees</h1>
    <table  class="table table-striped">
      <thead>
        <tr>
          <th>Name</th>
          <th>Function</th>
          <th>Email</th>
          <th>Phone Number</th>
          <th>Departement</th>
        </tr>
      </thead>
      <tbody>
        {% for employee in filtre %}
          <tr>
            <td>{{ employee.name }}</td>
            <td>{{ employee.fonction }}</td>
            <td>{{ employee.email }}</td>
            <td>{{ employee.phone_number }}</td>
            <td>{{ employee.departement }}</td>
          </tr>
        {% endfor %}
      </tbody>
    </table>
  </div>
{% endblock %}