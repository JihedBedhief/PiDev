{% extends 'base1.html.twig' %}

{% block body %}
<div >
    <div class="row">
        <div class="col-md-6 offset-md-3">
            {{ form_start(form) }}
            {{ form_row(form) }}
            {{ form_end(form) }}
        </div>
    </div>
</div>
  <div class="container">
    <h1 >List of Employees</h1>
    <table  class="table table-striped">
      <thead>
        <tr>
          <th>Name</th>
          <th>Function</th>
          <th>Email</th>
          <th>Phone Number</th>
          <th>Department</th>
        </tr>
      </thead>
      <tbody>
        {% for employee in employees %}
          <tr>
            <td>{{ employee.name }}</td>
            <td>{{ employee.fonction }}</td>
            <td>{{ employee.email }}</td>
            <td>{{ employee.phone_number }}</td>
            <td>{{ employee.departement }}</td>
          </tr>
        {% endfor %}
      </tbody>
    </table>
  </div>
{% endblock %}