 {% extends 'base.html.twig' %}

{% block title %} Nouvel Employé {% endblock %}
{% block body %}
	<div class="row">
		<div style="display: flex;align-items: center;justify-content: center;margin-top: 90px; padding: 15px;">
			<div class="card">
				<div class="card-body">
					<h5 class="card-title">Créer un nouvel employé</h5>
					{{ form_start(form,{attr:{novalidate:'novalidate'}}) }}           
					<label for="inputText" class="col-sm-18 col-form-label">Nom</label>
					<div class="col-sm-18">
						{{ form_widget(form.nom,{'attr':{'class':'form-control'}}) }}
					</div>
					{{ form_errors(form.nom,{'attr':{'class':'text-danger'}}) }}					
				<label for="inputText" class="col-sm-18 col-form-label">Prenom</label>
				<div class="col-sm-18">
					{{ form_widget(form.prenom,{'attr':{'class':'form-control'}}) }}
				</div>
				{{ form_errors(form.prenom,{'attr':{'class':'text-danger'}}) }}
				<label for="inputText" class="col-sm-18 col-form-label"> Id company</label>
				<div class="col-sm-18">
					{{ form_widget(form.idComp,{'attr':{'class':'form-control'}}) }}
				</div>
				{{ form_errors(form.idComp,{'attr':{'class':'text-danger'}}) }}
			<label for="inputText" class="col-sm-18 col-form-label"> Email </label>
			<div class="col-sm-18">
				{{ form_widget(form.email,{'attr':{'class':'form-control'}}) }}
			</div>
			{{ form_errors(form.email,{'attr':{'class':'text-danger'}}) }}
					<label for="inputText" class="col-sm-18 col-form-label"> Cin</label>
					<div class="col-sm-18">
						{{ form_widget(form.cin,{'attr':{'class':'form-control'}}) }}
					</div>
					{{ form_errors(form.cin,{'attr':{'class':'text-danger'}}) }}
                    <label for="inputText" class="col-sm-18 col-form-label"> Numreo de tlf</label>
					<div class="col-sm-18">
						{{ form_widget(form.phoneNum,{'attr':{'class':'form-control'}}) }}
					</div>
					{{ form_errors(form.phoneNum,{'attr':{'class':'text-danger'}}) }}
					<div class="col-sm-10" style="display: flex;align-items: center;justify-content: center">
						{{ form_widget(form.Create,{'attr':{'class':'btn btn-primary'}}) }}						
					</div>
					{{ form_end(form) }}
					{% for type, messages in app.flashes() %}
                       {% for message in messages %}
                          <div class="alert alert-{{ type }}">{{ message }}</div>
                    {% endfor %}
				</div>
			</div>
		</div>
	</div>
{% endfor %}


{% endblock %} 
